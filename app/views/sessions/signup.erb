<h1>Signup</h1>

<%  @user.errors.full_messages.each do |user| %>
  <li><%= user %></li>
<% end %>


<form action="/signup" method="post">
  <div>
    <input name="email" type="text" placeholder="email" value="<%= @user.email %>" />
    <input name="password" type="text" placeholder="password" value="<%= @user.password %>" />
    <button>SINGUP</button>
  </div>
</form>